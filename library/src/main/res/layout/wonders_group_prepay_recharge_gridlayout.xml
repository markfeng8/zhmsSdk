<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/wonders_margin_8dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/wonders_padding_16dp"
    android:paddingEnd="@dimen/wonders_padding_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv600"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="19"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textSize="@dimen/wonders_text_size_14sp"
            android:lineSpacingExtra="4dp"
            android:text="600元\n医院推荐"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <TextView
            android:id="@+id/tv500"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="12"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="500元"
            android:textSize="@dimen/wonders_text_size_14sp"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <TextView
            android:id="@+id/tv1000"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="12"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="1000元"
            android:textSize="@dimen/wonders_text_size_14sp"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2000"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="12"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textSize="@dimen/wonders_text_size_14sp"
            android:text="2000元"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />

        <EditText
            android:id="@+id/etInput"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="@dimen/wonders_margin_8dp"
            android:layout_weight="31"
            android:background="@drawable/wonders_group_gray_checked_selector"
            android:clickable="true"
            android:focusable="true"
            android:inputType="number"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:textSize="@dimen/wonders_text_size_14sp"
            android:lineSpacingExtra="4dp"
            android:hint="请输入其他金额\n100的倍数，不超过医院推荐金额"
            android:textColor="@drawable/wonders_group_text_recharge_selector" />
    </LinearLayout>

</LinearLayout>