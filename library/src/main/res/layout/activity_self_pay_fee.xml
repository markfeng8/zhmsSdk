<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wonders_rgb_color_f8f8f8"
    android:orientation="vertical"
    tools:context=".ui.selfpayfee.view.SelfPayFeeActivity">

    <com.wondersgroup.android.sdk.widget.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/wonders_self_pay_home"
        app:textColor="@color/wonders_rgb_color_ffffff"
        app:textSize="@dimen/wonders_text_size_18sp"
        app:titleBgColor="@color/wonders_rgb_color_1e90ff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/wonders_group_activity_after_pay_bottom" />

</LinearLayout>