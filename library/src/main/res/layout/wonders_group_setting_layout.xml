<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_24dp"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_name"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="张三"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/icNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_ic_number"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/tvIcNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="36020319785634"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/icNum"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/icNum" />

    <TextView
        android:id="@+id/signDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_sign_date"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/icNum"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <TextView
        android:id="@+id/tvSignDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="2018-05-25"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/signDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/signDate" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/wonders_rgb_color_f8f8f8"
        app:layout_constraintTop_toBottomOf="@id/view4" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/view5" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_notification_phone"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/signDate"
        app:layout_constraintTop_toBottomOf="@id/view6" />

    <ImageView
        android:id="@+id/ivEditPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:src="@drawable/wonders_group_edit"
        app:layout_constraintBottom_toBottomOf="@id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/phone" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="13780880123"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/phone"
        app:layout_constraintRight_toLeftOf="@id/ivEditPhone" />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/phone" />

    <TextView
        android:id="@+id/afterPayState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="医后付状态"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/phone"
        app:layout_constraintTop_toBottomOf="@id/view7" />

    <TextView
        android:id="@+id/tvAfterPayState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_arrearage"
        android:textColor="@color/wonders_rgb_color_0aae65"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/afterPayState"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/afterPayState" />

    <TextView
        android:id="@+id/mobilePayState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_electronic_social_card_state"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/afterPayState"
        app:layout_constraintTop_toBottomOf="@id/view8" />

    <TextView
        android:id="@+id/tvElectronicCardState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_already_open"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/mobilePayState"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/mobilePayState" />

    <TextView
        android:id="@+id/tvLookRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_24dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:drawableEnd="@drawable/wonders_group_right_arrow"
        android:paddingTop="@dimen/wonders_padding_16dp"
        android:paddingBottom="@dimen/wonders_padding_16dp"
        android:text="@string/wonders_look_afterpay_rules"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/mobilePayState"
        app:layout_constraintTop_toBottomOf="@id/view9" />

    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/tvLookRule" />

    <TextView
        android:id="@+id/tvTermination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_24dp"
        android:layout_marginTop="@dimen/wonders_margin_32dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:background="@drawable/wonders_group_blue_shape"
        android:gravity="center"
        android:paddingTop="@dimen/wonders_padding_12dp"
        android:paddingBottom="@dimen/wonders_padding_12dp"
        android:text="@string/wonders_cancel_after_pay"
        android:textColor="@color/wonders_rgb_color_ffffff"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintStart_toStartOf="@id/tvLookRule"
        app:layout_constraintTop_toBottomOf="@id/view10" />

</android.support.constraint.ConstraintLayout>