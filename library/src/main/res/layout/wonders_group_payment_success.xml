<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPaySuccess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_16dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/wonders_group_success"
            android:drawablePadding="@dimen/wonders_padding_10dp"
            android:gravity="center"
            android:text="恭喜您已全部成功支付！"
            android:textColor="@color/wonders_rgb_color_58c78f"
            android:textSize="@dimen/wonders_text_size_16sp" />

        <LinearLayout
            android:id="@+id/llContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/wonders_margin_8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_16dp"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:drawableStart="@drawable/wonders_group_pay"
            android:drawablePadding="@dimen/wonders_padding_6dp"
            android:gravity="center"
            android:text="@string/wonders_text_pay_detail"
            android:textColor="@color/wonders_rgb_color_666666"
            android:textSize="@dimen/wonders_text_size_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_16dp"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:layout_marginEnd="@dimen/wonders_margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计金额："
                android:textColor="@color/wonders_rgb_color_969696"
                android:textSize="@dimen/wonders_text_size_12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCompleteTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_16dp"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:layout_marginEnd="@dimen/wonders_margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金部分："
                android:textColor="@color/wonders_rgb_color_969696"
                android:textSize="@dimen/wonders_text_size_12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCompletePersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llYiBaoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wonders_margin_16dp"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:layout_marginEnd="@dimen/wonders_margin_16dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医保部分："
                android:textColor="@color/wonders_rgb_color_969696"
                android:textSize="@dimen/wonders_text_size_12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCompleteYiBao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPayDetails"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/wonders_margin_16dp"
            android:background="@drawable/wonders_group_blue_stroke_shape"
            android:gravity="center"
            android:padding="@dimen/wonders_padding_8dp"
            android:text="查看已完成订单"
            android:textColor="@color/wonders_rgb_color_0000ff"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>