<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/wonders_margin_24dp"
    android:layout_marginTop="@dimen/wonders_margin_8dp"
    android:layout_marginEnd="@dimen/wonders_margin_24dp"
    app:columnCount="3"
    app:rowCount="2">

    <TextView
        android:id="@+id/tvPrepayFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/wonders_group_prepay_fee"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="预交金充值"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvRechargeRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/wonders_group_chongzhi_record"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="充值记录"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvDayDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/wonders_group_day_detail_find"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="日清单查询"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvLeaveHos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:drawableTop="@drawable/wonders_group_leave_hospital"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="出院结算"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvInHosRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:drawableTop="@drawable/wonders_group_in_hospital_record"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="历史住院记录"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>