<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wondersgroup.android.sdk.widget.ArcView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:arcHeight="32dp"
        app:bgColor="@color/wonders_rgb_color_1e90ff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wonders_margin_16dp"
        android:layout_marginRight="@dimen/wonders_margin_16dp"
        android:background="@drawable/wonders_group_white_shape_4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_28dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_48dp"
                android:text="姓名："
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_18sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_8dp"
                android:text="张三"
                android:textColor="@color/wonders_rgb_color_333333"
                android:textSize="@dimen/wonders_text_size_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:layout_marginBottom="@dimen/wonders_margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_48dp"
                android:text="身份证号："
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <TextView
                android:id="@+id/tvIcNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/wonders_margin_8dp"
                android:gravity="center"
                android:text="123456789"
                android:textColor="@color/wonders_rgb_color_666666"
                android:textSize="@dimen/wonders_text_size_14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wonders_margin_16dp"
        android:layout_marginRight="@dimen/wonders_margin_16dp"
        android:background="@drawable/wonders_group_wave" />

</RelativeLayout>