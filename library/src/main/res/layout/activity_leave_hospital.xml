<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wonders_rgb_color_ffffff"
    android:orientation="vertical">

    <com.wondersgroup.android.sdk.widget.TitleBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/wonders_leave_hospital_settle"
        app:textColor="@color/wonders_rgb_color_ffffff"
        app:textSize="@dimen/wonders_text_size_18sp"
        app:titleBgColor="@color/wonders_rgb_color_1e90ff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/wonders_group_leave_hospital_header" />

            <include layout="@layout/wonders_group_leave_hospital_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wonders_margin_8dp"
                android:background="@color/wonders_rgb_color_f0f0f0"
                android:paddingStart="@dimen/wonders_margin_16dp"
                android:paddingTop="@dimen/wonders_padding_8dp"
                android:paddingBottom="@dimen/wonders_padding_8dp"
                android:text="请选择预交金充值方式"
                android:textColor="@color/wonders_rgb_color_999999"
                android:textSize="@dimen/wonders_text_size_14sp" />

            <include layout="@layout/wonders_group_recharge_pay_type_layout" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/wonders_group_leave_hospital_tail" />

</LinearLayout>