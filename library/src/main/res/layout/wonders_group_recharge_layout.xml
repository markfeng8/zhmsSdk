<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/wonders_padding_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/wonders_padding_8dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="梁晓宁"
                    android:textColor="@color/wonders_rgb_color_333333"
                    android:textSize="@dimen/wonders_text_size_18sp" />

                <TextView
                    android:id="@+id/tvHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_16dp"
                    android:text="湖州市中心医院"
                    android:textColor="@color/wonders_rgb_color_969696"
                    android:textSize="@dimen/wonders_text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/wonders_padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="当前预交金余额"
                    android:textColor="@color/wonders_rgb_color_969696"
                    android:textSize="@dimen/wonders_text_size_16sp" />

                <TextView
                    android:id="@+id/ivHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/wonders_margin_16dp"
                    android:text="￥3000.00"
                    android:textColor="@color/wonders_rgb_color_333333"
                    android:textSize="@dimen/wonders_text_size_16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wonders_rgb_color_f0f0f0"
            android:padding="@dimen/wonders_padding_8dp"
            android:text="请选择充值金额"
            android:textColor="@color/wonders_rgb_color_999999"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <include layout="@layout/wonders_group_prepay_recharge_gridlayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wonders_margin_8dp"
            android:background="@color/wonders_rgb_color_f0f0f0"
            android:padding="@dimen/wonders_padding_8dp"
            android:text="请选择预交金充值方式"
            android:textColor="@color/wonders_rgb_color_999999"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <include layout="@layout/wonders_group_recharge_pay_type_layout" />

        <Button
            android:id="@+id/btnOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wonders_margin_10dp"
            android:layout_marginTop="@dimen/wonders_margin_16dp"
            android:background="@drawable/wonders_group_blue_shape"
            android:text="立即支付"
            android:textColor="@color/wonders_rgb_color_ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>