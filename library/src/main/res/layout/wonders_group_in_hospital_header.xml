<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/wonders_margin_16dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="张三"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPaymentType"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPaymentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:background="@drawable/wonders_group_green_stroke_shape"
        android:paddingStart="@dimen/wonders_padding_16dp"
        android:paddingTop="@dimen/wonders_padding_6dp"
        android:paddingEnd="@dimen/wonders_padding_16dp"
        android:paddingBottom="@dimen/wonders_padding_6dp"
        android:text="医保"
        android:textColor="@color/wonders_rgb_color_0aae65"
        android:textSize="@dimen/wonders_text_size_14sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName"
        app:layout_constraintLeft_toRightOf="@id/tvName" />

    <TextView
        android:id="@+id/tvMobPayState"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:background="@drawable/wonders_group_open_state_selector"
        android:drawableStart="@drawable/wonders_group_already_open"
        android:gravity="center"
        android:paddingStart="@dimen/wonders_padding_8dp"
        android:paddingEnd="@dimen/wonders_padding_8dp"
        android:text="@string/wonders_open_mobile_pay"
        android:textColor="@drawable/wonders_group_text_selector"
        android:textSize="@dimen/wonders_text_size_10sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/tvPaymentType" />

    <TextView
        android:id="@+id/tvIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="身份证号："
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvIdNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:gravity="center"
        android:text="123456789"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvIdText"
        app:layout_constraintLeft_toRightOf="@id/tvIdText" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/tvIdText" />

    <TextView
        android:id="@+id/tvHospitalName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/wonders_margin_16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:drawableStart="@drawable/wonders_group_hospital"
        android:drawableEnd="@drawable/wonders_group_right_arrow"
        android:drawablePadding="@dimen/wonders_padding_10dp"
        android:gravity="start|center"
        android:text="@string/wonders_select_hospital_please"
        android:textColor="@color/wonders_rgb_color_333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/tvHospitalName" />

</android.support.constraint.ConstraintLayout>