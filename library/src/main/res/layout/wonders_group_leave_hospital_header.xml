<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_18dp"
        android:layout_marginTop="@dimen/wonders_margin_16dp"
        android:text="@string/wonders_text_liangxiaoning"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHosName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:layout_marginLeft="@dimen/wonders_margin_8dp"
        android:text="@string/wonders_huzhou_renmin_hospital"
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintLeft_toRightOf="@id/tvName"
        app:layout_constraintTop_toTopOf="@id/tvName" />

    <TextView
        android:id="@+id/tvSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:text="@string/wonders_text_social_number"
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvSocialNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="@string/wonders_social_number"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvSocial"
        app:layout_constraintLeft_toRightOf="@id/tvSocial" />

    <TextView
        android:id="@+id/tvInHos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_24dp"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="住院ID："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvSocialNum"
        app:layout_constraintLeft_toRightOf="@id/tvSocialNum" />

    <TextView
        android:id="@+id/tvInHosId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvInHos"
        app:layout_constraintLeft_toRightOf="@id/tvInHos" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="入院日期："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintLeft_toLeftOf="@id/tvSocial"
        app:layout_constraintTop_toBottomOf="@id/tvSocial" />

    <TextView
        android:id="@+id/tvInHosDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="2018-12-01"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDate"
        app:layout_constraintLeft_toRightOf="@id/tvDate" />

    <TextView
        android:id="@+id/tvArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/wonders_margin_16dp"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="入院病区："
        android:textColor="@color/wonders_rgb_color_969696"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvInHosDate"
        app:layout_constraintLeft_toRightOf="@id/tvInHosDate" />

    <TextView
        android:id="@+id/tvInHosArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:text="呼吸一区"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvArea"
        app:layout_constraintLeft_toRightOf="@id/tvArea" />

</android.support.constraint.ConstraintLayout>