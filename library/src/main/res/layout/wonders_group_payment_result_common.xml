<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="就诊人："
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <TextView
            android:id="@+id/tvTreatName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start"
            android:text="@string/wonders_text_liangxiaoning"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSocialNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证号："
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <TextView
            android:id="@+id/tvSocialNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/wonders_social_number"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="就诊医院："
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <TextView
            android:id="@+id/tvHospitalName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/wonders_huzhou_renmin_hospital"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单时间："
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <TextView
            android:id="@+id/tvBillDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="2018-02-27"
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单编号："
            android:textColor="@color/wonders_rgb_color_969696"
            android:textSize="@dimen/wonders_text_size_14sp" />

        <TextView
            android:id="@+id/tvBillNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textColor="@color/wonders_rgb_color_333333"
            android:textSize="@dimen/wonders_text_size_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/wonders_margin_20dp"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:layout_marginEnd="@dimen/wonders_margin_16dp"
        android:background="@color/wonders_rgb_color_e0e0e0" />

</LinearLayout>