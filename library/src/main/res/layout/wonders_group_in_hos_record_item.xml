<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llHospitalItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:src="@drawable/wonders_group_hospital"
        app:layout_constraintBottom_toBottomOf="@id/view11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHospitalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:layout_marginTop="@dimen/wonders_margin_4dp"
        android:text="医院1"
        android:textColor="@color/wonders_rgb_color_333333"
        android:textSize="@dimen/wonders_text_size_16sp"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFeeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:text="订单日期：2018-10-16"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/tvHospitalName" />

    <TextView
        android:id="@+id/tvTradeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:text="订单号：000000"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/tvFeeDate" />

    <TextView
        android:id="@+id/tvFeeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/wonders_margin_8dp"
        android:layout_marginBottom="@dimen/wonders_margin_4dp"
        android:text="总金额：00元"
        android:textColor="@color/wonders_rgb_color_666666"
        android:textSize="@dimen/wonders_text_size_12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintTop_toBottomOf="@id/tvTradeNo" />

    <View
        android:id="@+id/view11"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/wonders_margin_8dp"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/tvFeeTotal" />

    <View
        android:id="@+id/view12"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:background="@color/wonders_rgb_color_f8f8f8"
        app:layout_constraintTop_toBottomOf="@id/view11" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/wonders_rgb_color_e0e0e0"
        app:layout_constraintTop_toBottomOf="@id/view12" />

</android.support.constraint.ConstraintLayout>